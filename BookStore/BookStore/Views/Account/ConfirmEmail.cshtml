@model EmailConfirmedModel
@{
    ViewData["Title"] = "ConfirmEmail";
}


<div class="container">
    <div class="row text-center">
        <div class="col-md-4">
            @if (Model.EmailVerified == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>Your email has been verified sucessfully.</p>
                </div>

            }
            else
            {
                @if(Model.EmailSent)
                {
                    <p>Email send on your registered email id.</p>
                }
                else
                {
                    <p>We have sent an email on your email id. Click on the link to login.</p>
                }
                    <form asp-action="ConfirmEmail">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Email" />
                    <p>Did not get any email or deleted by mistake?</p>
                    <div class="form-group">
                        <input type="submit" name="name" value="Resend Confirmation email" class="btn btn-primary" />
                    </div>
                    </form>
                
                
            }
        </div>
    </div>
</div>