@model BookModel
<div class="col-md-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ?  "/images/noimage.png" : Model.CoverImageUrl)" class="img-thumbnail" alt="@Model.Title" />
        <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not available" : Model.Title)</h3>
        <p class="text">@(string.IsNullOrEmpty(Model.Description) ? "Description is not available" : Model.Description)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id" asp-fragment="similarBooks" class="btn btn-sm btn-outline-secondary">View details</a>
                </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "Author is not available" : Model.Author)</small>
            </div>
    </div>
</div>